@{ 
    List<IncidenciaViewModel> incidencias = ViewBag.Incidencias;
} 
@model List<EmpleadoViewModel>



<!-- Cabecera -->
<div class="row">
    <div class="col-md-6">
        <h1 class="h3 mb-3 font-weight-normal">Empleados</h1>
    </div>
</div>

<!-- Lista de Usuarios --> 
 
<div class="container">

    @foreach (var item in Model)
    {
        <div class="row customRow">
                <div class="col-md-6">
                <a asp-controller="Home" asp-action="Info" asp-route-idUser="@item.ID" class="btn btn-link">
                    <p><strong>@item.Nombre </strong> <strong>@item.Apellido1 </strong> <strong>@item.Apellido2 </strong></p>
                </a>
            </div>
        </div>
        
     }

</div>
